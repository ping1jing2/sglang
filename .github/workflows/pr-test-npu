name: PR Test (Huawei Ascend NPU)

on:
  pull_request:
    branches:
      - 'main'
      - '*-dev'
    paths:
      - '*.txt'
      - '**/*.py'
      - '.github/workflows/vllm_ascend_test.yaml'
      - '!docs/**'
      - '!examples/**'
      - 'pytest.ini'
      - '!benchmarks/**'
      - 'tools/mypy.sh'
      - 'mypy.ini'
      - '.github/workflows/*.ya?ml'
      - '.github/workflows/actionlint.*'
      - '.github/workflows/matchers/actionlint.json'


# only cancel in-progress runs of the same workflow
# and ignore the lint / 1 card / 4 cards test type
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

jobs:
  ci-on-single-card:
    # Only trigger on pull request
    if: ${{ github.event_name == 'pull_request' }}
    runs-on: linux-arm64-npu-1 # runs on one card box
    container:
      image: m.daocloud.io/quay.io/ascend/cann:8.1.rc1-910b-ubuntu22.04-py3.10
    steps:
      - uses: actions/checkout@4
      - name: Set up Python 3.10
        uses: actions/setup-python@v5
        with:
          python-version: 3.10
      - name: Install sglang
        run: |
          python -m pip install --upgrade pip -i https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple some-package
          cd python
          pip install -e "sglang[all_npu]" -i https://mirrors.tuna.tsinghua.edu.cn/pypi/web/simple some-package
      - name: Run test
        run: |
          npu-smi info
